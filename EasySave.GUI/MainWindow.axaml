<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="900" d:DesignHeight="600"
        x:Class="EasySave.GUI.MainWindow"
        Title="EasySave 2.0"
        Width="900" Height="600"
        MinWidth="700" MinHeight="500">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="EasySave 2.0" FontSize="32" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBlock Text="Gestionnaire de sauvegardes" FontSize="16" HorizontalAlignment="Center" Foreground="Gray"/>
        </StackPanel>
        
        <!-- Main Content -->
        <TabControl Grid.Row="1" Margin="0,0,0,20">
            <!-- Tab: Exécuter une sauvegarde -->
            <TabItem Header="Exécuter">
                <StackPanel Margin="20">
                    <TextBlock Text="Sélectionnez les travaux à exécuter :" FontSize="16" Margin="0,0,0,10"/>
                    <ListBox Name="JobListBox" Height="300" Margin="0,0,0,10" SelectionMode="Multiple"/>
                    <Button Name="ExecuteButton" Content="Exécuter les sauvegardes sélectionnées" 
                            HorizontalAlignment="Center" Padding="20,10" FontSize="14"/>
                    <TextBlock Name="StatusText" Text="" Margin="0,10,0,0" FontStyle="Italic" Foreground="Green"/>
                </StackPanel>
            </TabItem>
            
            <!-- Tab: Créer un plan -->
            <TabItem Header="Créer">
                <StackPanel Margin="20">
                    <TextBlock Text="Créer un nouveau plan de sauvegarde" FontSize="16" Margin="0,0,0,20"/>
                    
                    <TextBlock Text="Nom du travail :" Margin="0,0,0,5"/>
                    <TextBox Name="JobNameTextBox" Watermark="Ex: Documents" Margin="0,0,0,15"/>
                    
                    <TextBlock Text="Dossier source :" Margin="0,0,0,5"/>
                    <DockPanel Margin="0,0,0,15">
                        <Button Name="BrowseSourceButton" Content="Parcourir" DockPanel.Dock="Right" Margin="5,0,0,0"/>
                        <TextBox Name="SourcePathTextBox" Watermark="Chemin du dossier source"/>
                    </DockPanel>
                    
                    <TextBlock Text="Dossier de destination :" Margin="0,0,0,5"/>
                    <DockPanel Margin="0,0,0,15">
                        <Button Name="BrowseTargetButton" Content="Parcourir" DockPanel.Dock="Right" Margin="5,0,0,0"/>
                        <TextBox Name="TargetPathTextBox" Watermark="Chemin du dossier de destination"/>
                    </DockPanel>
                    
                    <TextBlock Text="Type de sauvegarde :" Margin="0,0,0,5"/>
                    <ComboBox Name="BackupTypeComboBox" Margin="0,0,0,20">
                        <ComboBoxItem Content="Complète" IsSelected="True"/>
                        <ComboBoxItem Content="Différentielle"/>
                    </ComboBox>
                    
                    <Button Name="CreateJobButton" Content="Créer le plan de sauvegarde" 
                            HorizontalAlignment="Center" Padding="20,10" FontSize="14"/>
                </StackPanel>
            </TabItem>
            
            <!-- Tab: Gérer les plans -->
            <TabItem Header="Gérer">
                <StackPanel Margin="20">
                    <TextBlock Text="Plans de sauvegarde existants" FontSize="16" Margin="0,0,0,10"/>
                    <ListBox Name="ManageJobListBox" Height="350" Margin="0,0,0,10"/>
                    <Button Name="DeleteJobButton" Content="Supprimer le plan sélectionné" 
                            HorizontalAlignment="Center" Padding="20,10" FontSize="14"/>
                </StackPanel>
            </TabItem>
        </TabControl>
        
        <!-- Footer -->
        <Border Grid.Row="2" Background="#F0F0F0" Padding="10" CornerRadius="5">
            <TextBlock Name="FooterText" Text="Prêt" HorizontalAlignment="Center"/>
        </Border>
    </Grid>
</Window>
